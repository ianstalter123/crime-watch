<h1>Edit your crime</h1>


<form action="/crimes/<%= crime.id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="name">Name: </label>
    <input type="text" class="form-control" name="crime[name]" id="address" value="<%=crime.name%>"autofocus>
  </div>

   <div class="form-group">
    <label for="image">Image: </label>
    <input type="text" class="form-control" name="crime[image]" id="image" value="<%=crime.image%>"autofocus>
  </div>
  
  
  <input type="submit" value="Add" class="btn btn-lg btn-success">
</form>


<form action="/crimes/<%= crime.id%>?_method=DELETE" method="POST">
    <input type="submit" value="X" class="btn btn-danger">
</form>
